.liveNewTitle
  新規登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .liveNewBox
    .liveNewBoxName
      ユーザーネーム
    .liveNewBoxForm
      = f.text_field :name, class:"liveNewBoxFormField"
  .liveNewBox
    .liveNewBoxName
      メールアドレス
    .liveNewBoxForm
      = f.email_field :email, autofocus: true, autocomplete: "email", class:"liveNewBoxFormField"
  .liveNewBox
    .liveNewBoxName
      パスワード
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    .liveNewBoxForm
      = f.password_field :password, autocomplete: "new-password", class:"liveNewBoxFormField"
  .liveNewBox
    .liveNewBoxName
      パスワード（確認用）
    = f.label :password_confirmation
    %br/
    .liveNewBoxForm
      = f.password_field :password_confirmation, autocomplete: "new-password", class:"liveNewBoxFormField"
  .submitBox
    = f.submit "新規登録", class:"submitBoxBtn"